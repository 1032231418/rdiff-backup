#!/usr/bin/make -f

include /usr/share/dpatch/dpatch.make

%:
	dh $@

override_dh_link:
	dh_link usr/lib/rdiff-backup/rdiff-backup usr/bin/rdiff-backup
	dh_link usr/lib/rdiff-backup/rdiff-backup-statistics usr/bin/rdiff-backup-statistics
	dh_link

override_dh_auto_install:
	dh_auto_install -- --install-lib=/usr/lib/rdiff-backup \
		--install-scripts=/usr/lib/rdiff-backup 
		--librsync-dir=/usr/lib/rdiff-backup 
		--libs=/usr/lib/rdiff-backup
	install -D -m 0644 debian/local/bash-completion debian/rdiff-backup/etc/bash_completion.d/rdiff-backup

	# Removing useless files
	rm -rf debian/rdiff-backup/usr/share/doc/rdiff-backup-*

